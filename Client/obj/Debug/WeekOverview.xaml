            <Button x:ConnectionId='1' Content="Log out"                       Grid.Column="1" Margin="1235,7,0,0" VerticalAlignment="Top" Height="41" Width="111"/>
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar IsOpen="True" IsSticky="True">
            <AppBarButton x:ConnectionId='2' Label="Courses" Icon="Library"                      />
            <AppBarButton x:ConnectionId='3' Label="Submissions" Icon="Document"                          />
            <AppBarButton x:ConnectionId='4' Label="Grades" Icon="List"                     />
            <AppBarButton x:ConnectionId='5' Label="Profile" Icon="Contact"                      />
        </CommandBar>
    </Page.BottomAppBar>
